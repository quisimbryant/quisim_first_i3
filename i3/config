set $inactive-bg-color   #2A3539
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #15171C
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #15171C
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #15171C
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #15171C

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

gaps inner 12
gaps outer 12

bar {
        position top


        status_command i3blocks -c ~/.config/i3/i3blocks.conf
        colors {
        background #181B1E
        separator #757575
        #                  border             background         text
        focused_workspace  $bg-color          $bg-color          $text-color
        inactive_workspace $181B1E            $181B1E            $inactive-text-color
        urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
}
